<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">
            <solid android:color="@color/darkGray"/>
            <corners android:bottomRightRadius="40dp" android:bottomLeftRadius="40dp"
                android:topLeftRadius="40dp" android:topRightRadius="40dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/darkGray"/>
            <corners android:bottomRightRadius="70dp" android:bottomLeftRadius="70dp"
                android:topLeftRadius="70dp" android:topRightRadius="70dp"/>
        </shape>
    </item>
</selector>